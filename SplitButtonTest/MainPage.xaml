<Page
    x:Class="SplitButtonTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SplitButtonTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <muxc:NavigationView x:Name="nvSample" ItemInvoked="nvSample_ItemInvoked">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem x:Name="SamplePage1Item" Content="Item1" />
                <muxc:NavigationViewItem x:Name="SamplePage2Item" Content="Item2" />
            </muxc:NavigationView.MenuItems>
            <Frame x:Name="contentFrame" />
        </muxc:NavigationView>
    </Grid>
</Page>
